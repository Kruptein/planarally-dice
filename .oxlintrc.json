{
    "env": {
        "browser": true
    },
    "categories": {
        "correctness": "deny",
        "perf": "deny",
        "suspicious": "deny",
        "nursery": "deny"
    },
    "rules": {
        "@typescript-eslint/consistent-indexed-object-style": [
            "error",
            {
                "preferRecord": true
            }
        ],
        "max-classes-per-file": "allow",
        "max-dependencies": "allow",
        "no-await-in-loop": "error",
        "no-barrel-file": "error",
        "no-continue": "allow",
        "no-magic-numbers": "allow",
        "no-negated-condition": "deny",
        "no-ternary": "allow",
        "no-undef": "allow",
        "pedantic": "deny",
        "sort-imports": [
            "error",
            {
                "ignoreCase": true,
                "ignoreDeclarationSort": true
            }
        ],
        "yoda": "allow"
    }
}
